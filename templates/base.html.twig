        {% endblock %}
    </head>
    <body>
    <header>
        <h1 class="animated bounceInDown"><a href="{{ path('index') }}">Premier site Symphony</a></h1>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('index') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path(
                        'hello_prenom',
                        {prenom: 'Mathieu', age: 26}
                    ) }}">Qui suis-je ?</a>
                </li>
                <li>
                    <a href="{{ path('show_customer_form') }}">Nos clients</a>
                </li>
                <li>
                    <a href="{{ path('show_flicker_form') }}">Galerie de photos</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>

    </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>